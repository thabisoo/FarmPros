@model FarmPros.ApplicationLogic.ViewModels.ProductCategoryViewModels.ProductCategoryViewModel
@{
    ViewData["Title"] = "Product Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button class="btn btn-primary" data-toggle="modal" data-target="#createProductCategoryModal">Create</button>

<div class="modal" id="createProductCategoryModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Product Category</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form asp-area="" asp-controller="ProductCategory" asp-action="Create" method="post" onsubmit="btnSubmit.disabled = true; return true;">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Product Category">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnSubmit">Submit</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

